@model IEnumerable<SadhanaApp.Domain.ServiceType>

@{
    ViewData["Title"] = "Manage Service Types";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <h2 class="text-center">Manage Service Types</h2>

    <div class="text-end mb-3">
        <a asp-action="Create" class="btn btn-primary">Add New Service Type</a>
        <div class="text-end mt-3">
            <a href="javascript:void(0);" onclick="setReturnFlagAndNavigate()"> <i class="bi bi-arrow-left"></i>Back to Sadhana Entry Form</a>
        </div>

    </div>

    <div class="table-responsive">
        <table class="table table-hover align-middle">
            <thead>
                <tr>
                    <th>Service Name</th>
                    <th class="text-center">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.ServiceName</td>
                        <td class="text-center">
                            <a asp-action="Edit" asp-route-id="@item.ServiceTypeId" class="btn btn-secondary btn-sm me-2">
                                <i class="bi bi-pencil"></i> Edit
                            </a>
                            <a asp-action="Delete" asp-route-id="@item.ServiceTypeId" class="btn btn-danger btn-sm">
                                <i class="bi bi-trash"></i> Delete
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <div class="text-end mt-3">
        <a href="javascript:void(0);" onclick="setReturnFlagAndNavigate()"><i class="bi bi-arrow-return-left"></i>Back to Sadhana Entry Form</a>
    </div>

</div>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <script>
        function setReturnFlagAndNavigate() {
            localStorage.setItem('returningFromServiceTypes', 'true');
            window.location.href = '@Url.Action("RecordSadhana", "Sadhana")';
        }

    </script>
    <!-- Include any additional scripts here -->
}
