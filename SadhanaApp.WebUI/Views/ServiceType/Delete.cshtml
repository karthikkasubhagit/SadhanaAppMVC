@model SadhanaApp.Domain.ServiceType

@{
    ViewData["Title"] = "Delete Service Type";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <h2 class="text-center mb-4">Delete Service Type</h2>
    <div class="card card-body">
        <h3 class="text-center mb-4 sadhana-heading">Are you sure you want to delete this service type?</h3>
        <div class="text-center mb-3">
            <h4>@Model.ServiceName</h4>
        </div>
        @if (ViewBag.ErrorMessage != null)
        {
            <div class="alert alert-warning">@ViewBag.ErrorMessage</div>
            <!-- Option buttons -->
            <form asp-action="HideServiceType" method="post" class="text-center">
                <input type="hidden" name="id" value="@Model.ServiceTypeId" />
                <button type="submit" class="btn btn-warning me-2">Hide Service Type</button>
                <a asp-action="Index" class="btn btn-secondary">Keep Service Type</a>
            </form>
        }
        else
        {
            <form asp-action="Delete" method="post" class="text-center">
                <input type="hidden" asp-for="ServiceTypeId" />
                <button type="submit" class="btn btn-danger me-2">Confirm Delete</button>
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
            </form>
        }
    </div>
</div>
