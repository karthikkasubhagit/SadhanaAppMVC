@model SadhanaApp.Domain.ServiceType

@{
    ViewData["Title"] = "Edit Service Type";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <h2 class="text-center mb-4">Edit Service Type</h2>

    <form asp-action="Edit" class="card card-body">
        <input type="hidden" asp-for="ServiceTypeId" />

        <div class="mb-3">
            <label asp-for="ServiceName" class="form-label">Service Name</label>
            <input asp-for="ServiceName" class="form-control" />
            <span asp-validation-for="ServiceName" class="text-danger"></span>
        </div>

        <div class="text-center">
            <button type="submit" class="btn btn-primary">Save Changes</button>
            <a asp-action="Index" class="btn btn-secondary">Back to Form</a>
        </div>
    </form>
</div>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <!-- Include any additional scripts here -->
}
