@if (Model.Item2.Any())
{
    <div style="padding: 20px; border: 1px solid #ddd; border-radius: 10px; margin-top: 20px; background-color: #f9f9f9;">
        <h3 style="color: #333; font-size: 1.5rem; margin-bottom: 15px;">Missing Sadhana Records for last 30 days</h3>

        <ul class="missing-dates-list" style="list-style-type: none; padding-left: 0;">
            @foreach (var missingDate in Model.Item2)
            {
                <li style="margin-bottom: 10px; padding: 5px 10px; background-color: #eee; border-radius: 5px;">@missingDate.ToShortDateString()</li>
            }
        </ul>

        <a asp-action="RecordSadhana" class="record-badge" style="display: inline-block; padding: 10px 15px; background-color: #007bff; color: white; text-decoration: none; border-radius: 5px; margin-top: 15px;">Record Missing Entry</a>
    </div>
}

