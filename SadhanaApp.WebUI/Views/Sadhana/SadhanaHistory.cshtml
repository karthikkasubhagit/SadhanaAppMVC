@model Tuple<List<ChantingRecord>, List<DateTime>>


@{
    ViewData["Title"] = "ChantingHistory";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="w-100 card border-0 p-4">
    <div class="card-header bg-success bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Your Sadhana History</h2>
            </div>
        </div>
    </div>

    <div class="card-body border p-4">
        <div class="row pb-3">
            <div class="col-6 offset-6 text-end">
                <a asp-controller="Sadhana" asp-action="RecordSadhana" class="btn btn-secondary">
                    <i class="bi bi-plus-circle"></i> Create New Record
                </a>
            </div>
        </div>
    </div>
    </div>

@if (Model.Item1.Any())
{

    <div class="table-responsive">
        <table class="table">
            <thead>
                <tr>
                    <th>Date</th>
                    <th>Morning Rounds</th>
                    <th>Day Rounds</th>
                    <th>Evening Rounds</th>
                    <th>Reading Duration</th>
                    <th>Hearing Duration</th>
                    <th>Service Duration</th>
                    <th>Total Points</th>
                    <th>Edit</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var record in Model.Item1)
                {
                    <tr>
                        <td>@record.Date.ToShortDateString()</td>
                        <td>@record.MorningRounds</td>
                        <td>@record.DayRounds</td>
                        <td>@record.EveningRounds</td>
                        <td>@record.ReadingDurationInMinutes</td>
                        <td>@record.HearingDurationInMinutes</td>
                        <td>@record.ServiceDurationInMinutes</td>
                        <td>@record.TotalScore</td>
                        <td><a asp-action="Edit" asp-route-id="@record.Id" class="btn btn-warning">Edit</a></td>
                    </tr>
                }
            </tbody>
            <a asp-action="RecordSadhana" class="btn btn-primary">Record Here</a>
        </table>
    </div>
}
