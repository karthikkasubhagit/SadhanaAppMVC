@model SadhanaApp.WebUI.ViewModels.SadhanaHistoryViewModel

@{
    ViewData["Title"] = "Chanting History";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Date Range Filter -->
<div>
    <a asp-action="SadhanaHistory" asp-route-daysFilter="30">Last 30 Days</a> |
    <a asp-action="SadhanaHistory" asp-route-daysFilter="100">Last 100 Days</a> |
    <a asp-action="SadhanaHistory" asp-route-daysFilter="365">Last 365 Days</a>
</div>

<div class="w-100 card border-0 p-4">
    <div class="card-header bg-success bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Your Sadhana History</h2>
            </div>
        </div>
    </div>

    <div class="card-body border p-4">
        <div class="row pb-3">
            <div class="col-12 text-center">
                <a asp-controller="Sadhana" asp-action="RecordSadhana" class="btn btn-secondary">
                    <i class="bi bi-plus-circle"></i> Create New Record
                </a>
            </div>
        </div>
    </div>
</div>

<div class="accordion" id="recordsAccordion">
    <!-- Records Section -->
    <div class="accordion-item">
        <h2 class="accordion-header" id="headingRecords">
            <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#collapseRecords" aria-expanded="true" aria-controls="collapseRecords">
                Your Sadhana Records
            </button>
        </h2>
        <div id="collapseRecords" class="accordion-collapse collapse show" aria-labelledby="headingRecords" data-bs-parent="#recordsAccordion">
            <div class="accordion-body">
                <!-- Place Your Records Table Here -->
                @if (Model.Records.Any())
                {
                    <div class="table-responsive">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>Date</th>
                                    <th>Morning Rounds</th>
                                    <th>Day Rounds</th>
                                    <th>Evening Rounds</th>
                                    <th>Reading Duration</th>
                                    <th>Hearing Duration</th>
                                    <th>Service Duration</th>
                                    <th>Total Points</th>
                                    <th>Edit / Delete</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var record in Model.Records)
                                {
                                    <tr>
                                        <td>@record.Date.ToShortDateString()</td>
                                        <td>@record.MorningRounds</td>
                                        <td>@record.DayRounds</td>
                                        <td>@record.EveningRounds</td>
                                        <td>@record.ReadingDurationInMinutes</td>
                                        <td>@record.HearingDurationInMinutes</td>
                                        <td>@record.ServiceDurationInMinutes</td>
                                        <td>@record.TotalScore</td>
                                        <td>
                                            <a asp-action="Edit" asp-route-id="@record.Id" class="btn btn-warning btn-sm me-1">
                                                <i class="bi bi-pencil-square"></i>
                                            </a>
                                            <button type="button" class="btn btn-danger btn-sm" onclick="confirmDelete('@record.Id')">
                                                <i class="bi bi-trash"></i>
                                            </button>

                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <div class="alert alert-info">No records found.</div>
                }
            </div>
        </div>
    </div>

@if (Model.TotalRecords > Model.PageSize)
{
    <div>
        @for (var i = 1; i <= Math.Ceiling((double)Model.TotalRecords / Model.PageSize); i++)
        {
            <a asp-action="SadhanaHistory" asp-route-page="@i" asp-route-daysFilter="@Model.DaysFilter" style="margin: 0 10px;">@i</a>
        }
    </div>
}


<a href="#" data-days-filter="30" onclick="loadMissingDates(30);">Last 30 Days</a> |
<a href="#" data-days-filter="100" onclick="loadMissingDates(100);">Last 100 Days</a> |
<a href="#" data-days-filter="365" onclick="loadMissingDates(365);">Last 365 Days</a> - Missed Dates


    <div class="accordion-item">
        <h2 class="accordion-header" id="headingMissingRecords">
            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseMissingRecords" aria-expanded="false" aria-controls="collapseMissingRecords">
                Missing Records
            </button>
        </h2>
        <div id="collapseMissingRecords" class="accordion-collapse collapse" aria-labelledby="headingMissingRecords" data-bs-parent="#recordsAccordion">
            <div class="accordion-body">
                <!-- Missing Records Content -->
                <div id="missingDatesContainer"></div>
            </div>
        </div>
    </div>
</div>



@section Scripts
    {
    <script>
        function loadMissingDates(daysFilter) {
            $.ajax({
                url: '@Url.Action("GetMissingDates", "Sadhana")',
                data: { daysFilter: daysFilter },
                success: function (data) {
                    $('#missingDatesContainer').html(data);
                }
            });
        }

        // Initial load
        loadMissingDates(30); // Default to 30 days

        // Bind to date range filter links
        $('a[data-days-filter]').click(function (e) {
            e.preventDefault();
            var daysFilter = $(this).data('daysFilter');
            loadMissingDates(daysFilter);
        });

        function confirmDelete(id) {
            if (confirm("Are you sure you want to delete this record?")) {
                deleteRecord(id);
            }
        }

        function deleteRecord(id) {
            var url = '@Url.Action("Delete", "Sadhana")';
            $.post(url, { id: id }, function (data) {
                if (data.success) {
                    window.location.href = '@Url.Action("SadhanaHistory", "Sadhana")';
                } else {
                    alert("Error occurred: " + data.message);
                }
            });
        }
    </script>
}
