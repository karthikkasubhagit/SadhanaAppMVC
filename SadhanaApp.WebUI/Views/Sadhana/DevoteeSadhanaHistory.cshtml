@model IEnumerable<User>

@{
    ViewData["Title"] = "Devotee Chanting History";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Devotee Chanting History</h2>

<label for="devoteeDropdown">Select a Devotee:</label>
<select id="devoteeDropdown" class="form-control">
    <option value="">-- All Devotees --</option>
    @foreach (var devotee in Model)
    {
        <option value="@devotee.UserId">@devotee.FirstName @devotee.LastName</option>
    }
</select>

@foreach (var devotee in Model)
{
    <div class="devotee-section" data-devotee-id="@devotee.UserId">
        <h3>@devotee.FirstName @devotee.LastName's Records</h3>
        <div class="table-responsive">
            <table class="table">
                <thead>
                    <tr>
                        <th>Date</th>
                        <th>Total Points</th>
                        <th>Details</th> <!-- Updated class -->
                    </tr>
                </thead>
                <tbody>
                    @foreach (var record in devotee.ChantingRecords)
                    {
                        <tr data-bs-toggle="collapse" data-bs-target="#details-@record.Id" aria-expanded="false" aria-controls="details-@record.Id">
                            <td>@record.Date.ToShortDateString()</td>
                            <td>@record.TotalScore</td>
                            <td>
                                <button class="btn btn-outline-primary btn-sm">View Details</button> <!-- Updated class -->
                            </td>
                        </tr>
                        <!-- Collapsible row for details -->
                        <tr id="details-@record.Id" class="collapse">
                            <td colspan="3">
                                <div class="card card-body">
                                    Morning Rounds: @record.MorningRounds <br>
                                    Day Rounds: @record.DayRounds <br>
                                    Evening Rounds: @record.EveningRounds <br>
                                    Reading Title: @record.ReadingTitle <br>
                                    Reading Duration: @record.ReadingDurationInMinutes <br>
                                    Hearing Title: @record.HearingTitle <br>
                                    Hearing Duration: @record.HearingDurationInMinutes <br>
                                    Service Duration: @record.ServiceDurationInMinutes <br>
                                    Service Type: @(record.ServiceType?.ServiceName ?? "N/A") <br>
                                    Notes: @record.Notes
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
}

<script>
    document.getElementById("devoteeDropdown").addEventListener("change", function () {
        var selectedDevoteeId = this.value;
        var sections = document.querySelectorAll(".devotee-section");

        sections.forEach(function (section) {
            if (selectedDevoteeId === "" || section.getAttribute("data-devotee-id") === selectedDevoteeId) {
                section.style.display = "block";
            } else {
                section.style.display = "none";
            }
        });
    });
</script>
