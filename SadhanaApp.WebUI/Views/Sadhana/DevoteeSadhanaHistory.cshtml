@model IEnumerable<User>

@{
    ViewData["Title"] = "DevoteeChantingHistory";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Devotee Chanting History</h2>

<label for="devoteeDropdown">Select a Devotee:</label>
<select id="devoteeDropdown" class="form-control">
    <option value="">-- All Devotees --</option>
    @foreach (var devotee in Model)
    {
        <option value="@devotee.UserId">@devotee.FirstName @devotee.LastName</option>
    }
</select>

@foreach (var devotee in Model)
{
    <div class="devotee-section" data-devotee-id="@devotee.UserId">
        <h3>@devotee.FirstName @devotee.LastName's Records</h3>
        <div class="table-responsive">
            <table class="table">
                <thead>
                    <tr>
                        <th>Date</th>
                        <th>Morning Rounds</th>
                        <th>Day Rounds</th>
                        <th>Evening Rounds</th>
                        <th>Reading Duration</th>
                        <th>Hearing Duration</th>
                        <th>Service Duration</th>
                        <th>Total Points</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var record in devotee.ChantingRecords)
                    {
                        <tr>
                            <td>@record.Date.ToShortDateString()</td>
                            <td>@record.MorningRounds</td>
                            <td>@record.DayRounds</td>
                            <td>@record.EveningRounds</td>
                            <td>@record.ReadingDurationInMinutes</td>
                            <td>@record.HearingDurationInMinutes</td>
                            <td>@record.ServiceDurationInMinutes</td>
                            <td>@record.TotalScore</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
}

<script>
    document.getElementById("devoteeDropdown").addEventListener("change", function () {
        var selectedDevoteeId = this.value;
        var sections = document.querySelectorAll(".devotee-section");

        // Loop through all devotee sections and hide/show based on selection
        sections.forEach(function (section) {
            if (selectedDevoteeId === "" || section.getAttribute("data-devotee-id") === selectedDevoteeId) {
                section.style.display = "block";
            } else {
                section.style.display = "none";
            }
        });
    });
</script>
