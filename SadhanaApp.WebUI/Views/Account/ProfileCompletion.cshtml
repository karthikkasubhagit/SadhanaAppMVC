@model SadhanaApp.WebUI.ViewModels.ProfileCompletionViewModel

@{
    ViewData["Title"] = "Complete Your Profile";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Complete Your Profile</h1>

<div class="container mt-5">
    <h2 class="text-center mb-4">Profile Completion</h2>

    <form asp-action="ProfileCompletion" method="post">
        <div class="form-group">
            <label asp-for="IsShikshaGuru">Do you mentor others?</label>
            <div>
                <label>
                    <input asp-for="IsShikshaGuru" type="radio" value="true"> Yes
                </label>
                <label>
                    <input asp-for="IsShikshaGuru" type="radio" value="false"> No
                </label>
            </div>
            <span asp-validation-for="IsShikshaGuru" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="ShikshaGuruId">Select your mentor</label>
            <select asp-for="ShikshaGuruId" asp-items="Model.ShikshaGurus" class="form-control" required>
                <option value="">Select a mentor</option>
            </select>
            <span asp-validation-for="ShikshaGuruId" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary btn-block">Complete Profile</button>
    </form>
</div>
